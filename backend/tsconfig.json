{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist", // Çıktı dizini
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",  // Kök dizin olarak ayarlanır
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@database/*": ["database/*"],  // `src` kaldırıldı, doğrudan `database` kullanıldı
      "@interfaces/*": ["interfaces/*"],
      "@prisma/*": ["prisma/*"],  // Eğer başka bir klasör kullanıyorsanız düzenleyin
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}




